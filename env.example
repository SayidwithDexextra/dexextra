# DexExtra Production Environment Variables
# Copy this file to .env.local for local development or configure in Vercel for production

# =============================================================================
# CORE APPLICATION
# =============================================================================
NODE_ENV=production
APP_URL=https://your-domain.vercel.app

# =============================================================================
# SUPABASE CONFIGURATION (Required)
# =============================================================================
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Client-side variables (must be prefixed with NEXT_PUBLIC_)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================
# Polygon Mainnet (recommended for production)
RPC_URL=https://polygon-rpc.com/
WS_RPC_URL=wss://polygon-rpc.com/
CHAIN_ID=137
DEFAULT_NETWORK=polygon

# Alternative: Use Alchemy for better reliability (recommended)
# RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
# WS_RPC_URL=wss://polygon-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# =============================================================================
# SMART CONTRACT ADDRESSES
# =============================================================================
# These will be populated after deploying your contracts
VAMM_FACTORY_ADDRESS=0x70Cbc2F399A9E8d1fD4905dBA82b9C7653dfFc74
MOCK_USDC_ADDRESS=0xbD3F940783C47649e439A946d84508503D87976D
MOCK_ORACLE_ADDRESS=0xB65258446bd83916Bd455bB3dBEdCb9BA106d551

# =============================================================================
# EVENT LISTENER CONFIGURATION
# =============================================================================
EVENT_LISTENER_ENABLED=true
EVENT_BATCH_SIZE=400
EVENT_CONFIRMATIONS=3
EVENT_RETRY_ATTEMPTS=3
EVENT_RETRY_DELAY=5000

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# Generate a strong random string for production
AUTH_SECRET=your-super-secure-random-string-min-32-chars
AUTH_EXPIRES_IN=7d

# =============================================================================
# EXTERNAL APIs
# =============================================================================
# Replace with your actual API configuration
API_KEY=your-api-key
API_URL=https://your-api-endpoint.com

# Alchemy API Key (optional but recommended for better RPC reliability)
ALCHEMY_API_KEY=your-alchemy-api-key

# =============================================================================
# FEATURE FLAGS & DEBUG
# =============================================================================
ENABLE_FEATURE_X=false
DEBUG_MODE=false

# =============================================================================
# DATABASE (if using external database)
# =============================================================================
# DATABASE_URL=postgresql://user:password@host:5432/database

# =============================================================================
# DEPLOYMENT NOTES
# =============================================================================
# 1. Never commit .env files to git
# 2. Use environment variable management in Vercel dashboard
# 3. Test all variables in staging environment first
# 4. Monitor logs for missing environment variables 