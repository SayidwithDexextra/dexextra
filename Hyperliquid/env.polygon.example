# HyperLiquid Polygon Deployment Configuration
# Copy this file to .env.polygon and fill in your values

# ================================
# NETWORK CONFIGURATION
# ================================

# Network to deploy to (polygon, mumbai, ethereum, goerli)
HARDHAT_NETWORK=polygon

# RPC URLs
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
MUMBAI_RPC_URL=https://polygon-mumbai.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
GOERLI_RPC_URL=https://eth-goerli.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# ================================
# DEPLOYMENT CREDENTIALS
# ================================

# Private key for deployment (NEVER commit this to git!)
PRIVATE_KEY=your_private_key_here

# Alchemy API key (for RPC access)
ALCHEMY_API_KEY=your_alchemy_api_key

# ================================
# VERIFICATION API KEYS
# ================================

# Polygonscan API key for contract verification
POLYGONSCAN_API_KEY=your_polygonscan_api_key

# Etherscan API key (for Ethereum networks)
ETHERSCAN_API_KEY=your_etherscan_api_key

# ================================
# DEPLOYMENT CONFIGURATION
# ================================

# Gas configuration
GAS_PRICE=30          # Gas price in gwei
GAS_LIMIT=8000000     # Gas limit

# Initial setup
INITIAL_COLLATERAL=1000000  # Initial USDC amount to mint

# ================================
# VERIFICATION SETTINGS
# ================================

VERIFICATION_DELAY=5000
RETRY_ATTEMPTS=3
SKIP_VERIFIED=true

# ================================
# DEPLOYMENT ADDRESSES (Auto-populated)
# ================================

DEPLOYER_ADDRESS=
MOCK_USDC_ADDRESS=
VAULT_ROUTER_ADDRESS=
ORDERBOOK_FACTORY_ADDRESS=
TRADING_ROUTER_ADDRESS=
UPGRADE_MANAGER_ADDRESS=
ETH_USD_ORDERBOOK_ADDRESS=
BTC_USD_ORDERBOOK_ADDRESS=
MATIC_USD_ORDERBOOK_ADDRESS=
