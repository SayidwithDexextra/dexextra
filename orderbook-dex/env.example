# ============================================================================
# OrderBook DEX Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your values

# ============================================================================
# DEPLOYMENT CONFIGURATION
# ============================================================================

# Private key for deployment (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# Whether to deploy mock tokens in development
DEPLOY_MOCK_TOKENS=true

# ============================================================================
# NETWORK RPC ENDPOINTS
# ============================================================================

# Ethereum Networks
MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
GOERLI_RPC_URL=https://goerli.infura.io/v3/YOUR_INFURA_KEY
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY

# Polygon Networks
POLYGON_RPC_URL=https://polygon-rpc.com
POLYGON_MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com

# Arbitrum Networks
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc

# Optimism Networks
OPTIMISM_RPC_URL=https://mainnet.optimism.io

# BSC Networks
BSC_RPC_URL=https://bsc-dataseed.binance.org
BSC_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545

# Avalanche Networks
AVALANCHE_RPC_URL=https://api.avax.network/ext/bc/C/rpc

# ============================================================================
# BLOCK EXPLORER API KEYS (Required for Contract Verification)
# ============================================================================

# Etherscan (Ethereum mainnet, Goerli, Sepolia)
# Get your API key from: https://etherscan.io/apis
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Polygonscan (Polygon mainnet and Mumbai testnet)
# Get your API key from: https://polygonscan.com/apis
POLYGONSCAN_API_KEY=your_polygonscan_api_key_here

# Arbiscan (Arbitrum)
# Get your API key from: https://arbiscan.io/apis
ARBISCAN_API_KEY=your_arbiscan_api_key_here

# Optimism Block Explorer
# Get your API key from: https://optimistic.etherscan.io/apis
OPTIMISM_API_KEY=your_optimism_api_key_here

# BSCScan (Binance Smart Chain)
# Get your API key from: https://bscscan.com/apis
BSCSCAN_API_KEY=your_bscscan_api_key_here

# Snowtrace (Avalanche)
# Get your API key from: https://snowtrace.io/apis
SNOWTRACE_API_KEY=your_snowtrace_api_key_here

# ============================================================================
# UMA PROTOCOL CONFIGURATION
# ============================================================================

# UMA Finder contract address (network specific)
UMA_FINDER_ADDRESS=

# Bond currency token address (network specific)
BOND_CURRENCY_ADDRESS=

# ============================================================================
# GAS REPORTING & ANALYTICS
# ============================================================================

# Enable gas reporting during tests
REPORT_GAS=false

# CoinMarketCap API key for gas cost in USD
# Get your API key from: https://coinmarketcap.com/api/
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# ============================================================================
# DEX CONFIGURATION
# ============================================================================

# Default market creation fee (in ETH)
DEFAULT_CREATION_FEE=1.0

# Trading fee rate (in basis points, e.g., 20 = 0.2%)
TRADING_FEE_RATE=20

# Emergency pause duration (in seconds)
EMERGENCY_PAUSE_DURATION=86400

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# Timelock delay for governance (in seconds)
TIMELOCK_DELAY=172800

# Maximum orders per user
MAX_ORDERS_PER_USER=1000

# ============================================================================
# DEVELOPMENT & TESTING
# ============================================================================

# Node environment
NODE_ENV=development

# Enable debug logging
DEBUG=false

# ============================================================================
# API KEY INSTRUCTIONS
# ============================================================================

# 1. ETHERSCAN_API_KEY:
#    - Go to https://etherscan.io/apis
#    - Create a free account
#    - Generate an API key
#    - Works for Ethereum mainnet, Goerli, and Sepolia

# 2. POLYGONSCAN_API_KEY:
#    - Go to https://polygonscan.com/apis
#    - Create a free account
#    - Generate an API key
#    - Works for Polygon mainnet and Mumbai testnet

# 3. ARBISCAN_API_KEY:
#    - Go to https://arbiscan.io/apis
#    - Create a free account
#    - Generate an API key

# 4. OPTIMISM_API_KEY:
#    - Go to https://optimistic.etherscan.io/apis
#    - Create a free account
#    - Generate an API key

# 5. BSCSCAN_API_KEY:
#    - Go to https://bscscan.com/apis
#    - Create a free account
#    - Generate an API key

# 6. SNOWTRACE_API_KEY:
#    - Go to https://snowtrace.io/apis
#    - Create a free account
#    - Generate an API key

# ============================================================================
# EXAMPLE DEPLOYMENT COMMANDS
# ============================================================================

# Deploy to Polygon mainnet:
# npx hardhat run scripts/deploy.ts --network polygon

# Deploy to Polygon Mumbai testnet:
# npx hardhat run scripts/deploy.ts --network polygonMumbai

# Deploy to Ethereum mainnet:
# npx hardhat run scripts/deploy.ts --network mainnet

# Deploy to Ethereum Sepolia testnet:
# npx hardhat run scripts/deploy.ts --network sepolia

# Manual verification (if automatic fails):
# npx hardhat verify --network polygon CONTRACT_ADDRESS "constructor_arg1" "constructor_arg2"

# =====================================
# SUPABASE CONFIGURATION
# =====================================
# Required for saving market data to database
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Optional: Supabase configuration
SUPABASE_ANON_KEY=your_anon_key_here
