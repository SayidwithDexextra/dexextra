SETTLEMENT_QUEUE_ENABLED=true
WEBSOCKET_SERVICE_ENABLED=true
EVENT_INDEXER_ENABLED=true
MONITORING_SERVICE_ENABLED=true

# =================================
# PERFORMANCE TUNING
# =================================

# Order Book Performance
MAX_ORDERS_PER_LEVEL=100
MAX_ORDER_BOOK_DEPTH=50
