{
  "designSystem": {
    "name": "PreviewMarket",
    "version": "1.0.0",
    "description": "Design system extracted from digital product preview page layout"
  },
  "colorPalette": {
    "primary": {
      "coral": "#FF8A65",
      "coralHover": "#FF7043",
      "coralActive": "#FF5722"
    },
    "neutral": {
      "black": "#000000",
      "darkGray": "#1A1A1A",
      "mediumGray": "#666666",
      "lightGray": "#F5F5F5",
      "white": "#FFFFFF"
    },
    "background": {
      "primary": "#FFFFFF",
      "secondary": "#F8F9FA",
      "dark": "#1A1A1A"
    },
    "text": {
      "primary": "#1A1A1A",
      "secondary": "#666666",
      "inverse": "#FFFFFF",
      "muted": "#999999"
    }
  },
  "typography": {
    "fontFamilies": {
      "primary": "system-ui, -apple-system, sans-serif",
      "secondary": "Georgia, serif"
    },
    "fontSizes": {
      "xs": "12px",
      "sm": "14px",
      "base": "16px",
      "lg": "18px",
      "xl": "20px",
      "2xl": "24px",
      "3xl": "32px",
      "4xl": "40px",
      "5xl": "48px"
    },
    "fontWeights": {
      "normal": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700,
      "extrabold": 800
    },
    "lineHeights": {
      "tight": 1.2,
      "normal": 1.5,
      "relaxed": 1.6,
      "loose": 1.8
    },
    "hierarchy": {
      "hero": {
        "fontSize": "48px",
        "fontWeight": 700,
        "lineHeight": 1.2,
        "color": "#1A1A1A"
      },
      "h1": {
        "fontSize": "40px",
        "fontWeight": 700,
        "lineHeight": 1.2,
        "color": "#1A1A1A"
      },
      "h2": {
        "fontSize": "32px",
        "fontWeight": 600,
        "lineHeight": 1.3,
        "color": "#1A1A1A"
      },
      "h3": {
        "fontSize": "24px",
        "fontWeight": 600,
        "lineHeight": 1.4,
        "color": "#1A1A1A"
      },
      "body": {
        "fontSize": "16px",
        "fontWeight": 400,
        "lineHeight": 1.6,
        "color": "#666666"
      },
      "caption": {
        "fontSize": "14px",
        "fontWeight": 400,
        "lineHeight": 1.5,
        "color": "#999999"
      }
    }
  },
  "spacing": {
    "base": 8,
    "scale": {
      "xs": "4px",
      "sm": "8px",
      "md": "16px",
      "lg": "24px",
      "xl": "32px",
      "2xl": "48px",
      "3xl": "64px",
      "4xl": "96px",
      "5xl": "128px"
    },
    "sections": {
      "padding": "64px",
      "margin": "48px"
    }
  },
  "layout": {
    "container": {
      "maxWidth": "1200px",
      "padding": "0 24px",
      "margin": "0 auto"
    },
    "grid": {
      "columns": 12,
      "gap": "24px"
    },
    "breakpoints": {
      "mobile": "320px",
      "tablet": "768px",
      "desktop": "1024px",
      "wide": "1440px"
    },
    "patterns": {
      "twoColumn": {
        "leftColumn": "50%",
        "rightColumn": "50%",
        "gap": "48px"
      },
      "heroSplit": {
        "contentColumn": "45%",
        "visualColumn": "55%",
        "gap": "64px"
      }
    }
  },
  "components": {
    "buttons": {
      "primary": {
        "backgroundColor": "#FF8A65",
        "color": "#FFFFFF",
        "padding": "16px 32px",
        "borderRadius": "8px",
        "fontSize": "16px",
        "fontWeight": 600,
        "border": "none",
        "cursor": "pointer",
        "transition": "all 0.2s ease",
        "states": {
          "hover": {
            "backgroundColor": "#FF7043",
            "transform": "translateY(-1px)"
          },
          "active": {
            "backgroundColor": "#FF5722",
            "transform": "translateY(0)"
          },
          "disabled": {
            "backgroundColor": "#CCCCCC",
            "color": "#999999",
            "cursor": "not-allowed"
          }
        }
      },
      "secondary": {
        "backgroundColor": "transparent",
        "color": "#FF8A65",
        "padding": "16px 32px",
        "borderRadius": "8px",
        "fontSize": "16px",
        "fontWeight": 600,
        "border": "2px solid #FF8A65",
        "cursor": "pointer",
        "transition": "all 0.2s ease",
        "states": {
          "hover": {
            "backgroundColor": "#FF8A65",
            "color": "#FFFFFF"
          }
        }
      }
    },
    "cards": {
      "default": {
        "backgroundColor": "#FFFFFF",
        "borderRadius": "12px",
        "padding": "24px",
        "boxShadow": "0 4px 12px rgba(0, 0, 0, 0.1)",
        "border": "1px solid #E5E7EB",
        "transition": "all 0.2s ease",
        "states": {
          "hover": {
            "boxShadow": "0 8px 24px rgba(0, 0, 0, 0.15)",
            "transform": "translateY(-2px)"
          }
        }
      },
      "preview": {
        "backgroundColor": "#FFFFFF",
        "borderRadius": "16px",
        "padding": "0",
        "boxShadow": "0 8px 32px rgba(0, 0, 0, 0.12)",
        "border": "none",
        "overflow": "hidden",
        "transform": "perspective(1000px) rotateY(-5deg)",
        "transition": "all 0.3s ease"
      }
    },
    "pricing": {
      "container": {
        "display": "flex",
        "alignItems": "baseline",
        "gap": "8px",
        "marginBottom": "16px"
      },
      "currency": {
        "fontSize": "20px",
        "fontWeight": 600,
        "color": "#1A1A1A"
      },
      "amount": {
        "fontSize": "48px",
        "fontWeight": 700,
        "color": "#1A1A1A",
        "lineHeight": 1
      },
      "label": {
        "fontSize": "14px",
        "fontWeight": 400,
        "color": "#666666",
        "textTransform": "lowercase"
      }
    }
  },
  "effects": {
    "shadows": {
      "sm": "0 1px 2px rgba(0, 0, 0, 0.05)",
      "md": "0 4px 12px rgba(0, 0, 0, 0.1)",
      "lg": "0 8px 24px rgba(0, 0, 0, 0.15)",
      "xl": "0 16px 48px rgba(0, 0, 0, 0.2)"
    },
    "borderRadius": {
      "sm": "4px",
      "md": "8px",
      "lg": "12px",
      "xl": "16px",
      "2xl": "24px",
      "full": "9999px"
    },
    "transitions": {
      "fast": "0.1s ease",
      "normal": "0.2s ease",
      "slow": "0.3s ease"
    },
    "transforms": {
      "perspective": "perspective(1000px)",
      "rotate3d": "rotateY(-5deg)",
      "hover": "translateY(-2px)",
      "active": "translateY(0)"
    }
  },
  "content": {
    "badges": {
      "category": {
        "backgroundColor": "#F3F4F6",
        "color": "#6B7280",
        "padding": "4px 12px",
        "borderRadius": "20px",
        "fontSize": "12px",
        "fontWeight": 500,
        "textTransform": "uppercase",
        "letterSpacing": "0.05em"
      }
    },
    "meta": {
      "author": {
        "fontSize": "14px",
        "color": "#666666",
        "fontWeight": 400
      },
      "description": {
        "fontSize": "16px",
        "color": "#666666",
        "lineHeight": 1.6,
        "marginBottom": "24px"
      }
    }
  },
  "animation": {
    "easing": {
      "easeInOut": "cubic-bezier(0.4, 0, 0.2, 1)",
      "easeOut": "cubic-bezier(0, 0, 0.2, 1)",
      "easeIn": "cubic-bezier(0.4, 0, 1, 1)"
    },
    "duration": {
      "fast": "150ms",
      "normal": "200ms",
      "slow": "300ms"
    }
  }
} 