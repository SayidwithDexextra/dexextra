{
  "designSystem": {
    "name": "CryptoMarketTicker",
    "version": "1.0.0",
    "description": "Design system extracted from cryptocurrency market ticker interface"
  },
  "colorPalette": {
    "primary": {
      "background": "#000000",
      "backgroundAlt": "#111111"
    },
    "text": {
      "primary": "#FFFFFF",
      "secondary": "#E5E5E5",
      "muted": "#CCCCCC"
    },
    "indicators": {
      "positive": "#00C851",
      "negative": "#FF4444",
      "neutral": "#17A2B8"
    },
    "currency": {
      "symbolText": "#FFFFFF",
      "priceText": "#FFFFFF",
      "changePositive": "#00C851",
      "changeNegative": "#FF4444"
    }
  },
  "typography": {
    "fontFamily": {
      "primary": "monospace, 'SF Mono', 'Monaco', 'Inconsolata', 'Roboto Mono', 'Consolas'",
      "fallback": "sans-serif, -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica Neue'"
    },
    "fontSize": {
      "symbol": "14px",
      "price": "14px",
      "change": "13px",
      "percentage": "13px"
    },
    "fontWeight": {
      "symbol": "600",
      "price": "500",
      "change": "400",
      "percentage": "400"
    },
    "lineHeight": {
      "ticker": "1.2",
      "compact": "1.0"
    },
    "letterSpacing": {
      "normal": "0px",
      "tight": "-0.01em"
    }
  },
  "spacing": {
    "units": {
      "xs": "4px",
      "sm": "8px",
      "md": "16px",
      "lg": "24px",
      "xl": "32px"
    },
    "ticker": {
      "itemGap": "32px",
      "symbolPriceGap": "8px",
      "priceChangeGap": "6px",
      "paddingVertical": "12px",
      "paddingHorizontal": "16px"
    }
  },
  "layout": {
    "ticker": {
      "type": "horizontal-scroll",
      "direction": "ltr",
      "overflow": "hidden",
      "whiteSpace": "nowrap"
    },
    "item": {
      "display": "inline-flex",
      "alignItems": "center",
      "gap": "8px",
      "minWidth": "auto"
    },
    "container": {
      "width": "100%",
      "height": "40px",
      "position": "relative"
    }
  },
  "components": {
    "tickerItem": {
      "structure": {
        "symbol": {
          "order": 1,
          "fontWeight": "600",
          "color": "text.primary"
        },
        "separator": {
          "content": "â€¢",
          "color": "text.muted",
          "margin": "0 4px"
        },
        "price": {
          "order": 2,
          "fontWeight": "500",
          "color": "text.primary",
          "prefix": "$"
        },
        "change": {
          "order": 3,
          "fontWeight": "400",
          "colorLogic": "conditional",
          "positiveColor": "indicators.positive",
          "negativeColor": "indicators.negative"
        }
      }
    },
    "scrollingBehavior": {
      "animation": "scroll",
      "direction": "left",
      "speed": "60px/s",
      "seamless": true,
      "pauseOnHover": true
    }
  },
  "interactions": {
    "hover": {
      "tickerItem": {
        "backgroundColor": "rgba(255, 255, 255, 0.05)",
        "borderRadius": "4px",
        "padding": "4px 8px",
        "transition": "all 0.2s ease"
      }
    },
    "states": {
      "default": {
        "cursor": "default"
      },
      "interactive": {
        "cursor": "pointer"
      }
    }
  },
  "visualEffects": {
    "borderRadius": {
      "none": "0px",
      "small": "2px",
      "medium": "4px",
      "large": "6px"
    },
    "shadows": {
      "none": "none",
      "subtle": "0 1px 2px rgba(0, 0, 0, 0.1)"
    },
    "gradients": {
      "none": "none"
    },
    "transitions": {
      "fast": "0.1s ease",
      "normal": "0.2s ease",
      "slow": "0.3s ease"
    }
  },
  "responsive": {
    "breakpoints": {
      "mobile": "480px",
      "tablet": "768px",
      "desktop": "1024px"
    },
    "tickerBehavior": {
      "mobile": {
        "fontSize": "12px",
        "itemGap": "24px",
        "speed": "40px/s"
      },
      "tablet": {
        "fontSize": "13px",
        "itemGap": "28px",
        "speed": "50px/s"
      },
      "desktop": {
        "fontSize": "14px",
        "itemGap": "32px",
        "speed": "60px/s"
      }
    }
  },
  "dataFormatting": {
    "price": {
      "decimals": 4,
      "currency": "USD",
      "prefix": "$",
      "thousandsSeparator": ","
    },
    "percentage": {
      "decimals": 2,
      "suffix": "%",
      "showSign": true
    },
    "symbol": {
      "case": "uppercase",
      "maxLength": 10
    }
  },
  "accessibility": {
    "ariaLabel": "Cryptocurrency market ticker",
    "tabIndex": "0",
    "role": "marquee",
    "reducedMotion": {
      "respectPreference": true,
      "fallbackBehavior": "static"
    }
  },
  "implementation": {
    "cssVariables": {
      "--ticker-bg": "#000000",
      "--ticker-text": "#FFFFFF",
      "--ticker-positive": "#00C851",
      "--ticker-negative": "#FF4444",
      "--ticker-speed": "60px",
      "--ticker-gap": "32px"
    },
    "cssClasses": {
      "container": "crypto-ticker",
      "item": "crypto-ticker__item",
      "symbol": "crypto-ticker__symbol",
      "price": "crypto-ticker__price",
      "change": "crypto-ticker__change"
    }
  }
} 