{
  "designSystem": {
    "name": "Product Form Interface Design System",
    "version": "1.0.0",
    "description": "Extracted design system from a clean, minimal product form interface with step-based navigation",
    
    "colorPalette": {
      "primary": {
        "background": "#FAFAFA",
        "surface": "#FFFFFF",
        "surfaceVariant": "#F5F5F5"
      },
      "secondary": {
        "dark": "#1A1A1A",
        "charcoal": "#2D2D2D",
        "darkGray": "#3A3A3A"
      },
      "text": {
        "primary": "#1A1A1A",
        "secondary": "#6B6B6B",
        "tertiary": "#9CA3AF",
        "muted": "#B8B8B8",
        "onDark": "#FFFFFF"
      },
      "accent": {
        "stepNumber": "#9CA3AF",
        "highlight": "#1A1A1A"
      }
    },

    "typography": {
      "fontFamilies": {
        "primary": "system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
        "fallback": "Arial, sans-serif"
      },
      "fontSizes": {
        "xs": "12px",
        "sm": "14px",
        "base": "16px",
        "lg": "18px",
        "xl": "20px",
        "2xl": "24px",
        "3xl": "32px",
        "4xl": "48px"
      },
      "fontWeights": {
        "light": 300,
        "regular": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700
      },
      "lineHeights": {
        "tight": 1.2,
        "normal": 1.5,
        "relaxed": 1.75
      },
      "hierarchy": {
        "stepNumber": {
          "fontSize": "14px",
          "fontWeight": 400,
          "color": "#9CA3AF",
          "lineHeight": 1.2,
          "letterSpacing": "0.025em"
        },
        "pageTitle": {
          "fontSize": "48px",
          "fontWeight": 700,
          "color": "#1A1A1A",
          "lineHeight": 1.2,
          "letterSpacing": "-0.02em"
        },
        "sectionTitle": {
          "fontSize": "20px",
          "fontWeight": 600,
          "color": "#1A1A1A",
          "lineHeight": 1.3
        },
        "bodyText": {
          "fontSize": "16px",
          "fontWeight": 400,
          "color": "#6B6B6B",
          "lineHeight": 1.5
        },
        "helpText": {
          "fontSize": "14px",
          "fontWeight": 400,
          "color": "#9CA3AF",
          "lineHeight": 1.4
        },
        "buttonText": {
          "fontSize": "16px",
          "fontWeight": 600,
          "color": "#FFFFFF",
          "lineHeight": 1,
          "letterSpacing": "0.025em",
          "textTransform": "uppercase"
        }
      }
    },

    "spacing": {
      "scale": "8px",
      "values": {
        "xs": "4px",
        "sm": "8px",
        "md": "16px",
        "lg": "24px",
        "xl": "32px",
        "2xl": "48px",
        "3xl": "64px",
        "4xl": "96px",
        "5xl": "128px"
      },
      "component": {
        "sectionGap": "48px",
        "elementGap": "24px",
        "textGap": "12px",
        "inputGap": "8px"
      }
    },

    "layout": {
      "maxWidth": "640px",
      "padding": {
        "container": "24px",
        "section": "0",
        "card": "24px"
      },
      "margins": {
        "sectionBottom": "48px",
        "elementBottom": "24px",
        "textBottom": "12px"
      },
      "grid": {
        "columns": 1,
        "gap": "24px"
      }
    },

    "components": {
      "buttons": {
        "primary": {
          "backgroundColor": "#1A1A1A",
          "color": "#FFFFFF",
          "padding": "16px 24px",
          "borderRadius": "8px",
          "border": "none",
          "fontSize": "16px",
          "fontWeight": 600,
          "textTransform": "uppercase",
          "letterSpacing": "0.025em",
          "cursor": "pointer",
          "transition": "all 0.2s ease",
          "minHeight": "56px",
          "width": "100%"
        },
        "primaryHover": {
          "backgroundColor": "#2D2D2D",
          "transform": "translateY(-1px)"
        },
        "primaryActive": {
          "backgroundColor": "#0F0F0F",
          "transform": "translateY(0)"
        }
      },
      "forms": {
        "input": {
          "backgroundColor": "#FFFFFF",
          "border": "1px solid #E5E5E5",
          "borderRadius": "8px",
          "padding": "12px 16px",
          "fontSize": "16px",
          "color": "#1A1A1A",
          "minHeight": "48px",
          "width": "100%"
        },
        "inputFocus": {
          "borderColor": "#1A1A1A",
          "outline": "none",
          "boxShadow": "0 0 0 3px rgba(26, 26, 26, 0.1)"
        },
        "label": {
          "fontSize": "20px",
          "fontWeight": 600,
          "color": "#1A1A1A",
          "marginBottom": "8px",
          "display": "block"
        },
        "helpText": {
          "fontSize": "14px",
          "color": "#6B6B6B",
          "marginTop": "8px",
          "lineHeight": 1.4
        }
      },
      "navigation": {
        "stepIndicator": {
          "backgroundColor": "#2D2D2D",
          "padding": "16px 24px",
          "borderRadius": "12px",
          "display": "flex",
          "alignItems": "center",
          "justifyContent": "space-between",
          "marginTop": "48px"
        },
        "stepItem": {
          "fontSize": "14px",
          "color": "#9CA3AF",
          "fontWeight": 400
        },
        "stepItemActive": {
          "color": "#FFFFFF",
          "fontWeight": 500
        },
        "progressIcon": {
          "width": "24px",
          "height": "24px",
          "backgroundColor": "#FFFFFF",
          "borderRadius": "6px",
          "display": "flex",
          "alignItems": "center",
          "justifyContent": "center"
        }
      }
    },

    "effects": {
      "borderRadius": {
        "sm": "4px",
        "md": "8px",
        "lg": "12px",
        "xl": "16px"
      },
      "shadows": {
        "none": "none",
        "sm": "0 1px 2px rgba(0, 0, 0, 0.05)",
        "md": "0 4px 6px rgba(0, 0, 0, 0.07)",
        "lg": "0 10px 15px rgba(0, 0, 0, 0.1)"
      },
      "transitions": {
        "fast": "0.15s ease",
        "normal": "0.2s ease",
        "slow": "0.3s ease"
      }
    },

    "breakpoints": {
      "mobile": "320px",
      "tablet": "768px",
      "desktop": "1024px",
      "wide": "1280px"
    },

    "semanticTokens": {
      "formContainer": {
        "maxWidth": "640px",
        "margin": "0 auto",
        "padding": "24px"
      },
      "stepHeader": {
        "marginBottom": "48px"
      },
      "formSection": {
        "marginBottom": "32px"
      },
      "actionArea": {
        "marginTop": "48px"
      }
    }
  }
} 