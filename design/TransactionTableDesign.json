{
  "name": "Transaction Table Design System",
  "version": "1.0.0",
  "description": "Design system extracted from transaction table interface for trading applications",
  
  "colors": {
    "background": {
      "primary": "#000000",
      "secondary": "#0A0A0A",
      "tertiary": "#1A1A1A"
    },
    "text": {
      "primary": "#FFFFFF",
      "secondary": "#9CA3AF",
      "tertiary": "#6B7280",
      "muted": "#4B5563"
    },
    "accent": {
      "buy": "#22C55E",
      "sell": "#EF4444",
      "buyBackground": "rgba(34, 197, 94, 0.1)",
      "sellBackground": "rgba(239, 68, 68, 0.1)"
    },
    "borders": {
      "primary": "#2D2D2D",
      "secondary": "#1F1F1F",
      "hover": "#3F3F3F"
    },
    "interactive": {
      "hover": "rgba(255, 255, 255, 0.05)",
      "active": "rgba(255, 255, 255, 0.1)"
    }
  },
  
  "typography": {
    "fontFamily": {
      "primary": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
      "mono": "'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, 'Courier New', monospace"
    },
    "fontSize": {
      "xs": "0.75rem",
      "sm": "0.875rem", 
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem"
    },
    "fontWeight": {
      "normal": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700"
    },
    "lineHeight": {
      "tight": "1.25",
      "normal": "1.5",
      "relaxed": "1.625"
    }
  },
  
  "spacing": {
    "xs": "0.25rem",
    "sm": "0.5rem", 
    "md": "0.75rem",
    "lg": "1rem",
    "xl": "1.25rem",
    "2xl": "1.5rem",
    "3xl": "2rem"
  },
  
  "layout": {
    "borderRadius": {
      "sm": "0.25rem",
      "md": "0.375rem",
      "lg": "0.5rem",
      "xl": "0.75rem"
    },
    "borderWidth": {
      "thin": "1px",
      "medium": "2px"
    }
  },
  
  "components": {
    "table": {
      "container": {
        "backgroundColor": "background.primary",
        "borderColor": "borders.primary",
        "borderRadius": "layout.borderRadius.lg",
        "padding": "spacing.lg"
      },
      "header": {
        "fontSize": "typography.fontSize.sm",
        "fontWeight": "typography.fontWeight.medium",
        "color": "text.secondary",
        "padding": "spacing.md"
      },
      "cell": {
        "fontSize": "typography.fontSize.sm",
        "padding": "spacing.md",
        "borderColor": "borders.secondary"
      },
      "row": {
        "hover": {
          "backgroundColor": "interactive.hover"
        }
      }
    },
    "badge": {
      "buy": {
        "backgroundColor": "accent.buyBackground",
        "color": "accent.buy",
        "fontSize": "typography.fontSize.xs",
        "fontWeight": "typography.fontWeight.medium",
        "padding": "spacing.xs spacing.sm",
        "borderRadius": "layout.borderRadius.sm"
      },
      "sell": {
        "backgroundColor": "accent.sellBackground", 
        "color": "accent.sell",
        "fontSize": "typography.fontSize.xs",
        "fontWeight": "typography.fontWeight.medium",
        "padding": "spacing.xs spacing.sm",
        "borderRadius": "layout.borderRadius.sm"
      }
    },
    "address": {
      "fontFamily": "typography.fontFamily.mono",
      "fontSize": "typography.fontSize.sm",
      "color": "text.tertiary"
    },
    "filters": {
      "tab": {
        "backgroundColor": "background.secondary",
        "color": "text.secondary",
        "borderRadius": "layout.borderRadius.md",
        "padding": "spacing.sm spacing.lg",
        "fontSize": "typography.fontSize.sm",
        "active": {
          "backgroundColor": "background.tertiary",
          "color": "text.primary"
        }
      }
    }
  }
} 