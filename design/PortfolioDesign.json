{
  "theme": {
    "colors": {
      "background": {
        "primary": "linear-gradient(135deg, #1a1a1a 0%, #4a1a8b 100%)",
        "card": "#ffffff",
        "secondary": "#f8f9fa"
      },
      "text": {
        "primary": "#ffffff",
        "secondary": "#6c757d",
        "success": "#28a745"
      },
      "accent": {
        "primary": "#7c3aed",
        "secondary": "#e2e8f0"
      }
    },
    "typography": {
      "heading": {
        "large": {
          "fontSize": "3.5rem",
          "fontWeight": "700",
          "lineHeight": "1.2",
          "fontFamily": "system-ui, -apple-system, sans-serif"
        },
        "medium": {
          "fontSize": "1.5rem",
          "fontWeight": "600",
          "lineHeight": "1.4"
        }
      },
      "body": {
        "regular": {
          "fontSize": "1rem",
          "fontWeight": "400",
          "lineHeight": "1.5"
        },
        "small": {
          "fontSize": "0.875rem",
          "fontWeight": "400",
          "lineHeight": "1.4"
        }
      },
      "numeric": {
        "large": {
          "fontSize": "2.5rem",
          "fontWeight": "700",
          "lineHeight": "1"
        }
      }
    },
    "spacing": {
      "container": {
        "padding": "2rem"
      },
      "card": {
        "padding": "1.5rem",
        "gap": "1rem"
      },
      "section": {
        "gap": "1.5rem",
        "marginBottom": "2rem"
      }
    },
    "borderRadius": {
      "card": "1rem",
      "button": "0.5rem",
      "pill": "9999px"
    },
    "shadows": {
      "card": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)"
    },
    "components": {
      "card": {
        "background": "#ffffff",
        "borderRadius": "1rem",
        "padding": "1.5rem",
        "shadow": "0 4px 6px -1px rgba(0, 0, 0, 0.1)",
        "hover": {
          "transform": "translateY(-2px)",
          "transition": "transform 0.2s ease-in-out"
        }
      },
      "performanceTag": {
        "padding": "0.25rem 0.75rem",
        "borderRadius": "9999px",
        "fontSize": "0.875rem",
        "fontWeight": "500"
      },
      "tabButton": {
        "padding": "0.75rem 1.5rem",
        "borderRadius": "0.5rem",
        "fontSize": "1rem",
        "fontWeight": "500",
        "background": {
          "active": "#ffffff",
          "inactive": "transparent"
        }
      },
      "assetRow": {
        "height": "4rem",
        "padding": "1rem",
        "borderBottom": "1px solid #e2e8f0",
        "hover": {
          "background": "#f8f9fa"
        }
      }
    }
  },
  "layout": {
    "overview": {
      "display": "grid",
      "gap": "2rem",
      "padding": "2rem"
    },
    "performanceMetrics": {
      "display": "flex",
      "justifyContent": "space-between",
      "alignItems": "center"
    },
    "assetList": {
      "display": "flex",
      "flexDirection": "column",
      "gap": "0.5rem"
    }
  }
}
