{
  "name": "TokenTracker Design System",
  "description": "Design system extracted from cryptocurrency trading interface",
  "colors": {
    "primary": {
      "background": "#0A0A0A",
      "backgroundSecondary": "#1A1A1A",
      "backgroundTertiary": "#2A2A2A"
    },
    "text": {
      "primary": "#FFFFFF",
      "secondary": "#B0B0B0",
      "tertiary": "#808080",
      "muted": "#606060"
    },
    "accent": {
      "chart": "#4A90E2",
      "chartGlow": "#6BB6FF",
      "positive": "#00D084",
      "negative": "#FF4747",
      "warning": "#FFA500"
    },
    "interactive": {
      "buttonPrimary": "#4A90E2",
      "buttonPrimaryHover": "#6BB6FF",
      "buttonSecondary": "#2A2A2A",
      "buttonSecondaryHover": "#3A3A3A",
      "border": "#333333",
      "borderHover": "#555555"
    }
  },
  "typography": {
    "fontFamilies": {
      "primary": "Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
      "monospace": "'SF Mono', 'Monaco', 'Inconsolata', 'Roboto Mono', monospace"
    },
    "fontSizes": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem"
    },
    "fontWeights": {
      "light": 300,
      "regular": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },
    "lineHeights": {
      "tight": 1.2,
      "normal": 1.5,
      "relaxed": 1.75
    },
    "hierarchy": {
      "tokenName": {
        "fontSize": "1.5rem",
        "fontWeight": 600,
        "lineHeight": 1.2,
        "color": "#FFFFFF"
      },
      "tokenPrice": {
        "fontSize": "2.25rem",
        "fontWeight": 700,
        "lineHeight": 1.2,
        "color": "#FFFFFF"
      },
      "priceChange": {
        "fontSize": "1rem",
        "fontWeight": 500,
        "lineHeight": 1.2,
        "color": "#00D084"
      },
      "label": {
        "fontSize": "0.875rem",
        "fontWeight": 400,
        "lineHeight": 1.5,
        "color": "#808080"
      },
      "value": {
        "fontSize": "1rem",
        "fontWeight": 500,
        "lineHeight": 1.2,
        "color": "#FFFFFF"
      }
    }
  },
  "spacing": {
    "scale": {
      "xs": "0.25rem",
      "sm": "0.5rem",
      "md": "1rem",
      "lg": "1.5rem",
      "xl": "2rem",
      "2xl": "3rem",
      "3xl": "4rem"
    },
    "padding": {
      "card": "1.5rem",
      "button": "0.75rem 1.5rem",
      "input": "0.75rem 1rem",
      "container": "2rem"
    },
    "margins": {
      "section": "2rem",
      "element": "1rem",
      "small": "0.5rem"
    }
  },
  "layout": {
    "maxWidth": "1200px",
    "gridGap": "1.5rem",
    "borderRadius": {
      "sm": "0.375rem",
      "md": "0.5rem",
      "lg": "0.75rem",
      "xl": "1rem"
    },
    "containers": {
      "main": {
        "display": "grid",
        "gridTemplateColumns": "2fr 1fr",
        "gap": "1.5rem",
        "padding": "2rem"
      },
      "chart": {
        "borderRadius": "0.75rem",
        "background": "#1A1A1A",
        "padding": "1.5rem",
        "minHeight": "400px"
      },
      "trading": {
        "borderRadius": "0.75rem",
        "background": "#1A1A1A",
        "padding": "1.5rem"
      }
    }
  },
  "components": {
    "buttons": {
      "primary": {
        "backgroundColor": "#4A90E2",
        "color": "#FFFFFF",
        "borderRadius": "0.5rem",
        "padding": "0.75rem 1.5rem",
        "fontSize": "1rem",
        "fontWeight": 500,
        "border": "none",
        "cursor": "pointer",
        "transition": "all 0.2s ease",
        "hover": {
          "backgroundColor": "#6BB6FF",
          "transform": "translateY(-1px)"
        }
      },
      "secondary": {
        "backgroundColor": "#2A2A2A",
        "color": "#FFFFFF",
        "borderRadius": "0.5rem",
        "padding": "0.75rem 1.5rem",
        "fontSize": "1rem",
        "fontWeight": 500,
        "border": "1px solid #333333",
        "cursor": "pointer",
        "transition": "all 0.2s ease",
        "hover": {
          "backgroundColor": "#3A3A3A",
          "borderColor": "#555555"
        }
      },
      "timeframe": {
        "backgroundColor": "transparent",
        "color": "#808080",
        "borderRadius": "0.375rem",
        "padding": "0.5rem 1rem",
        "fontSize": "0.875rem",
        "fontWeight": 500,
        "border": "none",
        "cursor": "pointer",
        "transition": "all 0.2s ease",
        "active": {
          "color": "#FFFFFF",
          "backgroundColor": "#2A2A2A"
        }
      }
    },
    "inputs": {
      "primary": {
        "backgroundColor": "#2A2A2A",
        "color": "#FFFFFF",
        "borderRadius": "0.5rem",
        "padding": "0.75rem 1rem",
        "fontSize": "1rem",
        "border": "1px solid #333333",
        "outline": "none",
        "transition": "all 0.2s ease",
        "focus": {
          "borderColor": "#4A90E2",
          "boxShadow": "0 0 0 3px rgba(74, 144, 226, 0.1)"
        }
      }
    },
    "cards": {
      "primary": {
        "backgroundColor": "#1A1A1A",
        "borderRadius": "0.75rem",
        "padding": "1.5rem",
        "border": "1px solid #333333",
        "boxShadow": "0 4px 6px -1px rgba(0, 0, 0, 0.1)"
      },
      "stat": {
        "backgroundColor": "transparent",
        "borderRadius": "0.5rem",
        "padding": "1rem",
        "borderBottom": "1px solid #333333"
      }
    },
    "chart": {
      "lineColor": "#4A90E2",
      "lineWidth": 2,
      "glowEffect": "drop-shadow(0 0 4px #4A90E2)",
      "gradientStart": "rgba(74, 144, 226, 0.1)",
      "gradientEnd": "rgba(74, 144, 226, 0.01)",
      "gridColor": "#333333",
      "backgroundColor": "#1A1A1A"
    }
  },
  "effects": {
    "shadows": {
      "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
      "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1)",
      "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1)",
      "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1)"
    },
    "transitions": {
      "fast": "0.15s ease",
      "normal": "0.2s ease",
      "slow": "0.3s ease"
    },
    "animations": {
      "fadeIn": "opacity 0.2s ease-in",
      "slideUp": "transform 0.2s ease-out",
      "glow": "drop-shadow(0 0 4px currentColor)"
    }
  },
  "breakpoints": {
    "mobile": "640px",
    "tablet": "768px",
    "desktop": "1024px",
    "wide": "1280px"
  },
  "zIndex": {
    "base": 1,
    "dropdown": 10,
    "modal": 100,
    "tooltip": 1000
  }
} 