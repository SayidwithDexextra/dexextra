{
  "name": "Deposit Modal Design System",
  "version": "1.0.0",
  "description": "Design system extracted from deposit modal interface with dark theme",
  
  "colors": {
    "primary": {
      "background": "#1a1f2e",
      "surface": "#242937",
      "surfaceElevated": "#2a3142"
    },
    "text": {
      "primary": "#ffffff",
      "secondary": "#9ca3af",
      "muted": "#6b7280",
      "accent": "#3b82f6"
    },
    "accent": {
      "blue": "#3b82f6",
      "blueHover": "#2563eb",
      "orange": "#f97316",
      "purple": "#8b5cf6"
    },
    "semantic": {
      "success": "#10b981",
      "warning": "#f59e0b",
      "error": "#ef4444"
    }
  },

  "typography": {
    "fontFamily": {
      "primary": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif"
    },
    "fontSize": {
      "xs": "12px",
      "sm": "14px",
      "base": "16px",
      "lg": "18px",
      "xl": "20px",
      "2xl": "24px",
      "3xl": "30px",
      "4xl": "36px",
      "5xl": "48px",
      "hero": "72px"
    },
    "fontWeight": {
      "normal": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700,
      "extrabold": 800
    },
    "lineHeight": {
      "tight": 1.2,
      "normal": 1.5,
      "relaxed": 1.6
    },
    "hierarchy": {
      "modalTitle": {
        "fontSize": "24px",
        "fontWeight": 600,
        "color": "#ffffff",
        "lineHeight": 1.3
      },
      "heroAmount": {
        "fontSize": "72px",
        "fontWeight": 700,
        "color": "#ffffff",
        "lineHeight": 1.1
      },
      "sectionLabel": {
        "fontSize": "16px",
        "fontWeight": 500,
        "color": "#9ca3af",
        "lineHeight": 1.4
      },
      "primaryValue": {
        "fontSize": "16px",
        "fontWeight": 600,
        "color": "#ffffff",
        "lineHeight": 1.4
      },
      "secondaryValue": {
        "fontSize": "14px",
        "fontWeight": 400,
        "color": "#9ca3af",
        "lineHeight": 1.4
      },
      "caption": {
        "fontSize": "12px",
        "fontWeight": 400,
        "color": "#6b7280",
        "lineHeight": 1.3
      }
    }
  },

  "spacing": {
    "unit": 4,
    "scale": {
      "xs": "4px",
      "sm": "8px",
      "md": "16px",
      "lg": "24px",
      "xl": "32px",
      "2xl": "48px",
      "3xl": "64px"
    },
    "component": {
      "modalPadding": "24px",
      "sectionSpacing": "32px",
      "itemSpacing": "16px",
      "inputPadding": "12px 16px",
      "buttonPadding": "16px 24px"
    }
  },

  "borderRadius": {
    "none": "0px",
    "sm": "4px",
    "md": "8px",
    "lg": "12px",
    "xl": "16px",
    "2xl": "24px",
    "full": "9999px"
  },

  "shadows": {
    "modal": "0 25px 50px -12px rgba(0, 0, 0, 0.5)",
    "card": "0 4px 6px -1px rgba(0, 0, 0, 0.3)",
    "elevated": "0 10px 15px -3px rgba(0, 0, 0, 0.4)"
  },

  "layout": {
    "modal": {
      "maxWidth": "400px",
      "borderRadius": "16px",
      "padding": "24px",
      "backgroundColor": "#1a1f2e"
    },
    "container": {
      "padding": "16px",
      "borderRadius": "12px",
      "backgroundColor": "#242937",
      "border": "1px solid #374151"
    }
  },

  "components": {
    "buttons": {
      "primary": {
        "backgroundColor": "#3b82f6",
        "color": "#ffffff",
        "borderRadius": "12px",
        "padding": "16px 24px",
        "fontSize": "16px",
        "fontWeight": 600,
        "border": "none",
        "cursor": "pointer",
        "transition": "background-color 0.2s ease",
        "states": {
          "hover": {
            "backgroundColor": "#2563eb"
          },
          "active": {
            "backgroundColor": "#1d4ed8"
          },
          "disabled": {
            "backgroundColor": "#374151",
            "color": "#6b7280",
            "cursor": "not-allowed"
          }
        }
      },
      "secondary": {
        "backgroundColor": "transparent",
        "color": "#9ca3af",
        "border": "1px solid #374151",
        "borderRadius": "12px",
        "padding": "12px 20px",
        "fontSize": "14px",
        "fontWeight": 500
      }
    },
    "cards": {
      "infoCard": {
        "backgroundColor": "#242937",
        "borderRadius": "12px",
        "padding": "16px",
        "border": "1px solid #374151"
      },
      "transactionCard": {
        "backgroundColor": "#242937",
        "borderRadius": "12px",
        "padding": "20px",
        "border": "1px solid #374151",
        "marginBottom": "16px"
      }
    },
    "inputs": {
      "text": {
        "backgroundColor": "#242937",
        "border": "1px solid #374151",
        "borderRadius": "8px",
        "padding": "12px 16px",
        "color": "#ffffff",
        "fontSize": "16px",
        "states": {
          "focus": {
            "borderColor": "#3b82f6",
            "outline": "none"
          }
        }
      }
    },
    "icons": {
      "size": {
        "sm": "16px",
        "md": "20px",
        "lg": "24px",
        "xl": "32px"
      },
      "colors": {
        "wallet": "#f97316",
        "polymarket": "#3b82f6",
        "ethereum": "#627eea",
        "usdc": "#2775ca"
      }
    }
  },

  "interactions": {
    "transitions": {
      "fast": "0.15s ease",
      "normal": "0.2s ease",
      "slow": "0.3s ease"
    },
    "hover": {
      "elevation": "0 8px 25px -8px rgba(0, 0, 0, 0.4)",
      "scale": "transform: scale(1.02)"
    }
  },

  "layout_patterns": {
    "modal_structure": {
      "header": {
        "display": "flex",
        "justifyContent": "space-between",
        "alignItems": "center",
        "marginBottom": "32px"
      },
      "hero_section": {
        "textAlign": "center",
        "marginBottom": "32px"
      },
      "info_sections": {
        "display": "flex",
        "flexDirection": "column",
        "gap": "16px",
        "marginBottom": "24px"
      },
      "action_area": {
        "position": "sticky",
        "bottom": "0",
        "backgroundColor": "#1a1f2e",
        "padding": "16px 0 0 0"
      }
    },
    "info_row": {
      "display": "flex",
      "justifyContent": "space-between",
      "alignItems": "center",
      "padding": "12px 0"
    }
  },

  "responsive": {
    "breakpoints": {
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px"
    },
    "modal": {
      "mobile": {
        "width": "100vw",
        "height": "100vh",
        "borderRadius": "0px",
        "padding": "20px"
      },
      "desktop": {
        "width": "400px",
        "height": "auto",
        "borderRadius": "16px",
        "padding": "24px"
      }
    }
  }
} 