{
  "designSystem": {
    "name": "Deposit Modal Design System",
    "version": "1.0.0",
    "description": "Design system extracted from deposit modal interface for consistent UI development",
    
    "colorPalette": {
      "primary": {
        "background": "#2A3441",
        "surface": "#1E2832",
        "surfaceVariant": "#3A4855"
      },
      "accent": {
        "blue": "#4A9EFF",
        "blueHover": "#3B8EEF"
      },
      "text": {
        "primary": "#FFFFFF",
        "secondary": "#A0ADB8",
        "muted": "#6B7A85"
      },
      "interactive": {
        "buttonDefault": "#4A5562",
        "buttonActive": "#5A6572",
        "buttonDisabled": "#3A4148"
      },
      "semantic": {
        "success": "#00D4AA",
        "warning": "#FFB800",
        "error": "#FF6B6B"
      }
    },

    "typography": {
      "fontFamily": {
        "primary": "system-ui, -apple-system, sans-serif",
        "monospace": "SF Mono, Consolas, monospace"
      },
      "fontSizes": {
        "xs": "12px",
        "sm": "14px",
        "base": "16px",
        "lg": "18px",
        "xl": "20px",
        "2xl": "24px",
        "3xl": "32px",
        "4xl": "48px",
        "5xl": "64px"
      },
      "fontWeights": {
        "normal": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700
      },
      "lineHeights": {
        "tight": 1.2,
        "normal": 1.5,
        "relaxed": 1.75
      },
      "hierarchy": {
        "modalTitle": {
          "fontSize": "24px",
          "fontWeight": 600,
          "lineHeight": 1.2,
          "color": "#FFFFFF"
        },
        "subtitle": {
          "fontSize": "16px",
          "fontWeight": 400,
          "lineHeight": 1.5,
          "color": "#A0ADB8"
        },
        "amountDisplay": {
          "fontSize": "64px",
          "fontWeight": 300,
          "lineHeight": 1,
          "color": "#FFFFFF"
        },
        "buttonText": {
          "fontSize": "16px",
          "fontWeight": 500,
          "lineHeight": 1.2,
          "color": "#FFFFFF"
        },
        "labelText": {
          "fontSize": "14px",
          "fontWeight": 400,
          "lineHeight": 1.4,
          "color": "#A0ADB8"
        }
      }
    },

    "spacing": {
      "scale": {
        "xs": "4px",
        "sm": "8px",
        "md": "16px",
        "lg": "24px",
        "xl": "32px",
        "2xl": "48px",
        "3xl": "64px",
        "4xl": "96px"
      },
      "component": {
        "modalPadding": "24px",
        "sectionGap": "32px",
        "buttonGap": "16px",
        "elementGap": "12px"
      }
    },

    "layout": {
      "modal": {
        "maxWidth": "420px",
        "minHeight": "600px",
        "borderRadius": "24px",
        "padding": "24px",
        "background": "#2A3441"
      },
      "grid": {
        "columns": 12,
        "gap": "16px",
        "container": {
          "maxWidth": "1200px",
          "padding": "0 24px"
        }
      }
    },

    "components": {
      "buttons": {
        "primary": {
          "background": "#4A9EFF",
          "color": "#FFFFFF",
          "padding": "16px 24px",
          "borderRadius": "12px",
          "fontSize": "16px",
          "fontWeight": 500,
          "border": "none",
          "cursor": "pointer",
          "transition": "all 0.2s ease",
          "states": {
            "hover": {
              "background": "#3B8EEF",
              "transform": "translateY(-1px)"
            },
            "active": {
              "background": "#2A7EDF",
              "transform": "translateY(0)"
            },
            "disabled": {
              "background": "#3A4148",
              "color": "#6B7A85",
              "cursor": "not-allowed"
            }
          }
        },
        "secondary": {
          "background": "#4A5562",
          "color": "#FFFFFF",
          "padding": "12px 20px",
          "borderRadius": "8px",
          "fontSize": "14px",
          "fontWeight": 500,
          "border": "none",
          "cursor": "pointer",
          "transition": "all 0.2s ease",
          "states": {
            "hover": {
              "background": "#5A6572"
            },
            "active": {
              "background": "#3A454F"
            }
          }
        },
        "percentage": {
          "background": "#3A4855",
          "color": "#FFFFFF",
          "padding": "12px 16px",
          "borderRadius": "8px",
          "fontSize": "14px",
          "fontWeight": 500,
          "border": "none",
          "cursor": "pointer",
          "minWidth": "60px",
          "transition": "all 0.2s ease",
          "states": {
            "hover": {
              "background": "#4A5865"
            },
            "active": {
              "background": "#4A9EFF",
              "color": "#FFFFFF"
            }
          }
        }
      },

      "inputs": {
        "amount": {
          "background": "transparent",
          "border": "none",
          "color": "#FFFFFF",
          "fontSize": "64px",
          "fontWeight": 300,
          "textAlign": "center",
          "outline": "none",
          "width": "100%"
        }
      },

      "cards": {
        "tokenSwap": {
          "background": "#3A4855",
          "borderRadius": "16px",
          "padding": "16px 20px",
          "display": "flex",
          "alignItems": "center",
          "justifyContent": "space-between",
          "gap": "12px"
        }
      },

      "navigation": {
        "header": {
          "display": "flex",
          "alignItems": "center",
          "justifyContent": "space-between",
          "padding": "0 0 24px 0"
        },
        "backButton": {
          "background": "transparent",
          "border": "none",
          "color": "#A0ADB8",
          "fontSize": "18px",
          "cursor": "pointer",
          "padding": "8px"
        },
        "closeButton": {
          "background": "transparent",
          "border": "none",
          "color": "#A0ADB8",
          "fontSize": "18px",
          "cursor": "pointer",
          "padding": "8px"
        }
      }
    },

    "effects": {
      "borderRadius": {
        "sm": "4px",
        "md": "8px",
        "lg": "12px",
        "xl": "16px",
        "2xl": "24px",
        "full": "50%"
      },
      "shadows": {
        "sm": "0 1px 2px rgba(0, 0, 0, 0.1)",
        "md": "0 4px 6px rgba(0, 0, 0, 0.1)",
        "lg": "0 10px 15px rgba(0, 0, 0, 0.1)",
        "xl": "0 20px 25px rgba(0, 0, 0, 0.15)",
        "modal": "0 25px 50px rgba(0, 0, 0, 0.25)"
      },
      "transitions": {
        "fast": "0.1s ease",
        "normal": "0.2s ease",
        "slow": "0.3s ease"
      },
      "blur": {
        "sm": "4px",
        "md": "8px",
        "lg": "12px"
      }
    },

    "breakpoints": {
      "xs": "320px",
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px",
      "2xl": "1536px"
    },

    "zIndex": {
      "dropdown": 1000,
      "sticky": 1020,
      "fixed": 1030,
      "modal": 1040,
      "popover": 1050,
      "tooltip": 1060
    }
  }
} 