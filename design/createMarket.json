{
  "colorPalette": {
    "primary": {
      "background": "#1a1a1a",
      "surface": "#2a2a2a",
      "surfaceSecondary": "#353535"
    },
    "text": {
      "primary": "#ffffff",
      "secondary": "#a1a1a1",
      "placeholder": "#666666"
    },
    "accent": {
      "blue": "#3b82f6",
      "blueHover": "#2563eb",
      "success": "#10b981",
      "warning": "#f59e0b",
      "error": "#ef4444"
    },
    "border": {
      "default": "#404040",
      "focus": "#3b82f6",
      "divider": "#2a2a2a"
    }
  },
  "typography": {
    "fontFamily": {
      "primary": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif"
    },
    "fontSize": {
      "title": "24px",
      "heading": "18px",
      "body": "14px",
      "caption": "12px",
      "small": "11px"
    },
    "fontWeight": {
      "normal": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700"
    },
    "lineHeight": {
      "tight": "1.2",
      "normal": "1.5",
      "relaxed": "1.6"
    }
  },
  "spacing": {
    "xs": "4px",
    "sm": "8px",
    "md": "16px",
    "lg": "24px",
    "xl": "32px",
    "xxl": "48px"
  },
  "layout": {
    "modal": {
      "width": "680px",
      "maxWidth": "90vw",
      "padding": "32px",
      "borderRadius": "12px"
    },
    "form": {
      "fieldSpacing": "24px",
      "labelSpacing": "8px",
      "groupSpacing": "32px"
    },
    "grid": {
      "columns": "1fr 1fr 1fr",
      "gap": "16px"
    }
  },
  "components": {
    "modal": {
      "background": "#1a1a1a",
      "borderRadius": "12px",
      "boxShadow": "0 25px 50px -12px rgba(0, 0, 0, 0.5)",
      "border": "1px solid #2a2a2a",
      "backdropFilter": "blur(8px)"
    },
    "input": {
      "background": "#2a2a2a",
      "border": "1px solid #404040",
      "borderRadius": "8px",
      "padding": "12px 16px",
      "fontSize": "14px",
      "height": "48px",
      "states": {
        "focus": {
          "borderColor": "#3b82f6",
          "outline": "2px solid rgba(59, 130, 246, 0.2)"
        },
        "hover": {
          "borderColor": "#525252"
        },
        "disabled": {
          "background": "#1a1a1a",
          "borderColor": "#2a2a2a",
          "color": "#666666"
        }
      }
    },
    "button": {
      "primary": {
        "background": "#3b82f6",
        "color": "#ffffff",
        "padding": "12px 24px",
        "borderRadius": "8px",
        "fontSize": "14px",
        "fontWeight": "500",
        "border": "none",
        "states": {
          "hover": {
            "background": "#2563eb"
          },
          "active": {
            "background": "#1d4ed8"
          },
          "disabled": {
            "background": "#374151",
            "color": "#9ca3af"
          }
        }
      },
      "secondary": {
        "background": "transparent",
        "color": "#a1a1a1",
        "padding": "12px 24px",
        "borderRadius": "8px",
        "fontSize": "14px",
        "fontWeight": "500",
        "border": "1px solid #404040",
        "states": {
          "hover": {
            "background": "#2a2a2a",
            "borderColor": "#525252"
          }
        }
      }
    },
    "dropdown": {
      "background": "#2a2a2a",
      "border": "1px solid #404040",
      "borderRadius": "8px",
      "padding": "12px 16px",
      "minHeight": "48px",
      "states": {
        "open": {
          "borderColor": "#3b82f6"
        }
      }
    },
    "fileUpload": {
      "background": "#2a2a2a",
      "border": "2px dashed #404040",
      "borderRadius": "8px",
      "padding": "24px",
      "states": {
        "dragOver": {
          "borderColor": "#3b82f6",
          "background": "#1e3a8a1a"
        }
      }
    },
    "avatar": {
      "size": "48px",
      "borderRadius": "50%",
      "border": "2px solid #404040"
    },
    "chip": {
      "background": "#2a2a2a",
      "color": "#ffffff",
      "padding": "6px 12px",
      "borderRadius": "20px",
      "fontSize": "12px",
      "border": "1px solid #404040"
    },
    "progressBar": {
      "background": "#2a2a2a",
      "fill": "#3b82f6",
      "height": "4px",
      "borderRadius": "2px"
    }
  },
  "interactions": {
    "animation": {
      "duration": {
        "fast": "150ms",
        "normal": "250ms",
        "slow": "350ms"
      },
      "easing": {
        "default": "cubic-bezier(0.4, 0, 0.2, 1)",
        "bounce": "cubic-bezier(0.68, -0.55, 0.265, 1.55)"
      }
    },
    "focus": {
      "outline": "2px solid rgba(59, 130, 246, 0.5)",
      "outlineOffset": "2px"
    }
  },
  "iconography": {
    "size": {
      "small": "16px",
      "medium": "20px",
      "large": "24px"
    },
    "color": {
      "default": "#a1a1a1",
      "active": "#3b82f6",
      "muted": "#666666"
    }
  }
} 