{
  "designSystem": {
    "name": "MarketTickers",
    "description": "Design system for sleek market ticker cards with dark theme",
    "version": "1.0.0"
  },
  "colorPalette": {
    "primary": {
      "background": "#0a0a0a",
      "cardBackground": "#1a1a1a",
      "surface": "#2a2a2a"
    },
    "text": {
      "primary": "#ffffff",
      "secondary": "#a0a0a0",
      "muted": "#666666",
      "accent": "#ffffff"
    },
    "interactive": {
      "buttonBackground": "#333333",
      "buttonText": "#ffffff",
      "buttonHover": "#404040",
      "buttonActive": "#2a2a2a"
    },
    "borders": {
      "subtle": "#333333",
      "medium": "#444444"
    }
  },
  "typography": {
    "fontFamily": {
      "primary": "system-ui, -apple-system, sans-serif",
      "heading": "system-ui, -apple-system, sans-serif"
    },
    "fontSize": {
      "sectionTitle": "32px",
      "cardTitle": "18px",
      "cardSubtitle": "14px",
      "price": "20px",
      "button": "14px",
      "category": "12px"
    },
    "fontWeight": {
      "bold": "700",
      "semibold": "600",
      "medium": "500",
      "regular": "400"
    },
    "lineHeight": {
      "tight": "1.2",
      "normal": "1.4",
      "relaxed": "1.6"
    }
  },
  "spacing": {
    "scale": "8px",
    "cardPadding": "24px",
    "cardGap": "24px",
    "elementSpacing": {
      "xs": "4px",
      "sm": "8px",
      "md": "16px",
      "lg": "24px",
      "xl": "32px"
    },
    "containerPadding": {
      "horizontal": "32px",
      "vertical": "40px"
    }
  },
  "layout": {
    "grid": {
      "columns": 3,
      "gap": "24px",
      "minCardWidth": "320px",
      "maxCardWidth": "400px"
    },
    "cardDimensions": {
      "aspectRatio": "4:5",
      "imageHeight": "240px",
      "contentHeight": "160px"
    },
    "breakpoints": {
      "mobile": "768px",
      "tablet": "1024px",
      "desktop": "1200px"
    }
  },
  "components": {
    "card": {
      "borderRadius": "12px",
      "background": "#1a1a1a",
      "border": "1px solid #333333",
      "boxShadow": "0 4px 24px rgba(0, 0, 0, 0.4)",
      "transition": "transform 0.2s ease, box-shadow 0.2s ease",
      "hoverTransform": "translateY(-4px)",
      "hoverBoxShadow": "0 8px 32px rgba(0, 0, 0, 0.6)"
    },
    "cardImage": {
      "borderRadius": "8px",
      "objectFit": "cover",
      "aspectRatio": "16:10",
      "background": "#2a2a2a"
    },
    "cardTitle": {
      "fontSize": "18px",
      "fontWeight": "700",
      "color": "#ffffff",
      "marginBottom": "8px",
      "lineHeight": "1.2"
    },
    "cardSubtitle": {
      "fontSize": "14px",
      "fontWeight": "400",
      "color": "#a0a0a0",
      "marginBottom": "16px"
    },
    "price": {
      "fontSize": "20px",
      "fontWeight": "700",
      "color": "#ffffff",
      "textAlign": "right"
    },
    "categoryTags": {
      "display": "flex",
      "gap": "8px",
      "fontSize": "12px",
      "color": "#a0a0a0",
      "marginBottom": "12px"
    },
    "actionButtons": {
      "display": "flex",
      "gap": "12px",
      "marginTop": "16px"
    }
  },
  "buttons": {
    "primary": {
      "background": "#333333",
      "color": "#ffffff",
      "border": "1px solid #444444",
      "borderRadius": "8px",
      "padding": "12px 20px",
      "fontSize": "14px",
      "fontWeight": "500",
      "cursor": "pointer",
      "transition": "all 0.2s ease",
      "hoverBackground": "#404040",
      "hoverBorder": "#555555",
      "activeBackground": "#2a2a2a"
    },
    "secondary": {
      "background": "transparent",
      "color": "#a0a0a0",
      "border": "1px solid #444444",
      "borderRadius": "8px",
      "padding": "12px 20px",
      "fontSize": "14px",
      "fontWeight": "500",
      "cursor": "pointer",
      "transition": "all 0.2s ease",
      "hoverBackground": "#2a2a2a",
      "hoverColor": "#ffffff",
      "hoverBorder": "#555555"
    }
  },
  "animations": {
    "cardHover": {
      "duration": "0.2s",
      "easing": "ease-out",
      "properties": ["transform", "box-shadow"]
    },
    "buttonHover": {
      "duration": "0.15s",
      "easing": "ease-out",
      "properties": ["background-color", "border-color", "color"]
    }
  },
  "states": {
    "default": {
      "opacity": "1",
      "transform": "translateY(0)"
    },
    "hover": {
      "opacity": "1",
      "transform": "translateY(-4px)"
    },
    "active": {
      "opacity": "0.9",
      "transform": "translateY(-2px)"
    },
    "disabled": {
      "opacity": "0.5",
      "cursor": "not-allowed"
    }
  },
  "designTokens": {
    "shadows": {
      "card": "0 4px 24px rgba(0, 0, 0, 0.4)",
      "cardHover": "0 8px 32px rgba(0, 0, 0, 0.6)",
      "subtle": "0 2px 8px rgba(0, 0, 0, 0.2)"
    },
    "borders": {
      "radius": {
        "card": "12px",
        "button": "8px",
        "image": "8px",
        "small": "4px"
      },
      "width": {
        "thin": "1px",
        "medium": "2px"
      }
    }
  }
} 